@model TechnologicalProcessSearch

<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">История технологического процесса</h3>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th style="width: 30%;">Id</th>
            <th style="width: 25%;">Начало</th>
            <th style="width: 25%;">Завершение</th>
            <th style="width: 20%;"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.listOfTechnologicalProcess.OrderBy(u => u.date_start))
        {
            <tr>
                <td style="width: 30%;">@item.technological_process_id</td>
                <td style="width: 25%;">@item.date_start</td>
                <td style="width: 25%;">@item.date_end</td>
                <td style="width: 20%;">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Stages" asp-action="Index" asp-route-id="@item.technological_process_id"
                           class="btn btn-primary form-control mx-2">&nbsp; Перейти</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>