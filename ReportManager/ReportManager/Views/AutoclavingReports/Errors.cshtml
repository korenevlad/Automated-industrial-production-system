@model List<Parameters_autoclaving_process>

<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Отчёт по истории ошибок</h3>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th style="width: 25%;">Время</th>
            <th style="width: 25%;">Температура автоклавирвания</th>
            <th style="width: 25%;">Давление пара автоклавирвания</th>
            <th style="width: 25%;">Оставшееся время</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in @Model.OrderBy(u => u.init_time))
        {
            <tr>
                <td style="width: 25%;">@item.init_time</td>
                <td class="@(item.temperature_is_normal? "" : "bg-danger text-white")"> @item.temperature</td>
                <td class="@(item.pressure_is_normal ? "" : "bg-danger text-white")"> @item.pressure</td>
                <td style="width: 25%;">@item.remaining_process_time</td>
            </tr>
        }
        </tbody>
    </table>
</div>